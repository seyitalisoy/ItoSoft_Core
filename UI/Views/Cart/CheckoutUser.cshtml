@model CheckOutUserViewModel

<h2>Adres Seçimi</h2>

@if (Model.AddressList.Any())
{
    <form method="post" asp-action="CompleteOrderUser" asp-controller="Cart">
        <div class="form-group">
            <label for="adress">Adres Seçiniz</label>
            <select id="adress" asp-for="SelectedAddress" class="form-control">
                @foreach (var item in Model.AddressList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Devam Et</button>
    </form>

    <div class="alert alert-info mt-4" role="alert" style="font-size: 1.2rem;">
        Farklı bir adres eklemek isteseniz, lütfen kullanıcı düzenleme sayfasına gidiniz:
        <br />
        <a href="@Url.Action("EditUser", "Member")" class="btn btn-outline-info mt-2">Profil Sayfası</a>
    </div>
}
else
{
    <div class="alert alert-warning mt-4" role="alert" style="font-size: 1.2rem;">
        Adres bilgileriniz bulunmamaktadır. Lütfen adres ekleyin.
        <a href="@Url.Action("EditUser", "Member")" class="btn btn-outline-info mt-2">Adres Ekle</a>
    </div>
}
