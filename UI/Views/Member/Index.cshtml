﻿@{
    ViewData["Title"] = "Hesabım";
}

@model AppUser

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6 ">
            <div class="ui floating message mb-5">
                <p class="fs-6"><strong>Merhaba @Model.FirstName</strong>, hesap detaylarını burada görüntüleyebilirsin.</p>
            </div>

            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>İsim:</label>
                        <input value="@Model.FirstName" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Soyisim:</label>
                        <input value="@Model.LastName" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>

            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>Kullanıcı adı:</label>
                        <input value="@Model.UserName" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Email:</label>
                        <input value="@Model.Email" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>

            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>Adres Başlık</label>
                        <input value="@Model.AdressTitle1" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Adres</label>
                        <input value="@Model.Adress1" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>

            <div class="ui form">
                <div class="two fields ">

                    <div class="field">
                        <label>Adres Başlık(2)</label>
                        <input value="@Model.AdressTitle2" readonly="" type="text" wfd-id="id56">
                    </div>

                    <div class="field">
                        <label>Adres(2)</label>
                        <input value="@Model.Adress2" readonly="" type="email" wfd-id="id57">
                    </div>

                </div>
            </div>

            <div class="ui form mt-4">
                <div class="one field">

                    <div class="field">
                        <label>Telefon numarası:</label>
                        <input value="@Model.PhoneNumber" readonly="" type="tel" wfd-id="id58">
                    </div>
                </div>
            </div>



            <a class="mt-5 text-center ui basic button  opacity-75" asp-action="EditUser" id="infoToUpdate">
                <span class="text-danger">*</span><span class="text-dark">Bu bilgileri güncellemek istiyorum.</span>
            </a>
        </div>
    </div>
</div>