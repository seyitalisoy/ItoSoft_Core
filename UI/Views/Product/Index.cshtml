@model List<Product>
@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-info" role="alert">
		@TempData["SuccessMessage"]
	</div>
}
@if (TempData["DeleteError"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["DeleteError"]
	</div>
}
@if (TempData["DeleteSuccess"] != null)
{
	<div class="alert alert-success" role="alert">
		@TempData["DeleteSuccess"]
	</div>
}
@if (TempData["UpdateSuccessMessage"] != null)
{
	<h6 class="alert alert-danger">@TempData["UpdateSuccessMessage"]</h6>
}
<!-- Silme Onay Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Ürünü Sil</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>Bu ürünü silmek istediğinize emin misiniz?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
				<button type="button" class="btn btn-danger" id="confirmDeleteBtn">Sil</button>
			</div>
		</div>
	</div>
</div>

<p>
	<a class="btn btn-primary" asp-action="Add">Ürün Ekle</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Ürün Adı
			</th>
			@*             <th>
                @Html.DisplayNameFor(model => model.Category)
            </th> *@
			<th>
				Fotoğraf
			</th>
			<th>
				Stok
			</th>
			<th>
				Fiyat
			</th>
			@*             <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>*@
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ProductName)
				</td>
				@*                 <td>
                    @Html.DisplayFor(modelItem => item.Category.Description)
                </td> *@
				<td>
					<img src="@item.Picture" class="w-25" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnitsInStock)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				@*                 <td>
                    @Html.DisplayFor(modelItem => item.IsHome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td> *@
				<td>
					<a class="btn btn-outline-success" asp-action="Update" asp-route-id="@item.ProductId">Düzenle</a> |
					<a class="btn btn-outline-primary" asp-action="GetProductDetails" asp-route-id="@item.ProductId">Detay</a> 

					<form asp-controller="Product" asp-action="Delete" method="post" class="d-inline deleteForm">
						<input type="hidden" name="id" value="@item.ProductId" />
						<button type="button" class="btn btn-outline-danger deleteBtn" data-id="@item.ProductId">Sil</button>
					</form>
				</td>
			@* 	<form asp-controller="Product" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
					<input type="hidden" name="id" value="@item.ProductId" />
					<button type="submit" class="btn btn-outline-danger">Sil</button>
				</form> *@
				@* </td> *@
				


			</tr>
		}
	</tbody>
</table>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		let selectedForm = null;

		document.querySelectorAll(".deleteBtn").forEach(button => {
			button.addEventListener("click", function () {
				selectedForm = this.closest("form"); // İlgili formu al
				let modal = new bootstrap.Modal(document.getElementById("confirmDeleteModal"));
				modal.show();
			});
		});

		document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
			if (selectedForm) {
				selectedForm.submit(); // Onay verilirse formu gönder
			}
		});
	});
</script>
