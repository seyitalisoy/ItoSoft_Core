@model List<OrderListDto>
@{
    ViewData["Title"] = "UserList";
}

<div>
    <h1 class="fw-light">Siparişler</h1>

    <div class="container mt-4">
        <!-- Tabloyu kaydırılabilir yapmak için .table-responsive sınıfını ekledik -->
        <div class="table-responsive" style="overflow-x:auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sipariş No</th>
                        <th>Kullanıcı ID</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Sipariş Tarihi</th>
                        <th>Ürün Miktarı</th>
                        <th>Toplam Fiyat</th>
                        <th>Adres</th>
                        <th>Müşteri Adı</th>
                        <th>Müşteri Soyadı</th>
                        <th>Müşteri Telefon</th>
                        <th>Müşteri Email</th>
                        <th>Stok</th>
                        <th>Ürün Resmi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.UserId</td>
                            <td>@item.ProductName</td>
                            <td>@item.CategoryName</td>
                            <td>@item.OrderDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.ProductAmount</td>
                            <td>@item.TotalPrice ₺</td>
                            <td>@item.Adress</td>
                            <td>@item.CustomerFirstName</td>
                            <td>@item.CustomerLastName</td>
                            <td>@item.CustomerPhone</td>
                            <td>@item.CustomerEmail</td>
                            <td>@item.ProductStock</td>
                            <td>
                                <img src="@item.ProductPicture" alt="Ürün Resmi" width="50" height="50">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
